{
  "$schema": "https://schemas.nimblebrain.ai/v1/nimblebrain-server.schema.json",
  "name": "ai.nimblebrain/deepl",
  "description": "DeepL translation API with comprehensive translation tools",
  "version": "0.2.0",
  "title": "DeepL MCP Server",
  "repository": {
    "url": "https://github.com/NimbleBrainInc/mcp-deepl",
    "source": "https://github.com/NimbleBrainInc/mcp-deepl"
  },
  "_meta": {
    "ai.nimblebrain/v1": {
      "runtime": "python:3.13",
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "display": {
        "category": "productivity",
        "tags": [
          "translation",
          "language",
          "deepl"
        ]
      },
      "deployment": {
        "protocol": "http",
        "port": 8000,
        "mcpPath": "/mcp"
      },
      "container": {
        "healthCheck": {
          "path": "/health",
          "port": 8000
        }
      },
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "1000m"
        },
        "requests": {
          "memory": "256Mi",
          "cpu": "250m"
        }
      },
      "scaling": {
        "minReplicas": 1,
        "maxReplicas": 3
      }
    }
  }
}
